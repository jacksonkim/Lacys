@model LacysMobile.Web.Models.ChangePasswordModel

@{
    ViewBag.Title = ViewBag.Header;
}

<div class="page-header" id="banner">
    <div class="row">
        <div class="col-lg-6">
            <h1>@ViewBag.Header</h1>
            @*<p class="lead">Quality Retail Shopping</p>*@
        </div>
        <div class="col-lg-6">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="well">

            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { Class = "bs-example form-horizontal" }))
            {
                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(model => model.OldPassword, new { Class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.PasswordFor(model => model.OldPassword, new { Class = "form-control" })
                        <div class="has-warning">
                            @Html.ValidationMessageFor(model => model.OldPassword)
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.NewPassword, new { Class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.PasswordFor(model => model.NewPassword, new { Class = "form-control" })
                        <div class="has-warning">
                            @Html.ValidationMessageFor(model => model.NewPassword)
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { Class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { Class = "form-control" })
                        <div class="has-warning">
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

