@model LacysMobile.Web.Models.LoginModel

@{
    ViewBag.Title = ViewBag.Header;
}

<div class="page-header" id="banner">
    <div class="row">
        <div class="col-lg-6">
            <h1>@ViewBag.Header</h1>
            @*<p class="lead">Quality Retail Shopping</p>*@
        </div>
        <div class="col-lg-6">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="well">
            @using (Html.BeginForm("Login", "Account", new { returnUrl = "SuccessfulSignIn" }, FormMethod.Post, new { Class = "bs-example form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, "Username", new { Class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.UserName, new { Class = "form-control" })
                        <div class="has-warning">
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { Class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Password, new { Class = "form-control" })
                        <div class="has-warning">
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <input type="submit" value="Sign In" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
