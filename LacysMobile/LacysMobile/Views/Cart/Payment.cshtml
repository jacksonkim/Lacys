@model LacysMobile.Web.Models.CreditCardModel

@{
    ViewBag.Title = ViewBag.Header;
}

<div class="page-header" id="banner">
    <div class="row">
        <div class="col-lg-6">
            <h1>@ViewBag.Header</h1>
            @*<p class="lead">Quality Retail Shopping</p>*@
        </div>
        <div class="col-lg-6">
        </div>
    </div>
</div>

@using (Html.BeginForm("SubmitOrder", "Cart", FormMethod.Post, new { Class = "bs-example form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.CardType, new { Class = "col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.DropDownListFor(model => model.CardType, LacysMobile.Web.Helpers.SelectListItemHelper.GetCardTypeList(), new { Class = "form-control" })
        </div>
    </div>
                
    <div class="form-group">
        @Html.LabelFor(model => model.CreditCardNumber, new { Class = "col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.TextBoxFor(model => model.CreditCardNumber, new { Class = "form-control" })
            <div class="has-warning">
                @Html.ValidationMessageFor(model => model.CreditCardNumber)
            </div>
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.ExpiryMonth, new { Class = "col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.DropDownListFor(model => model.ExpiryMonth, LacysMobile.Web.Helpers.SelectListItemHelper.GetExpiryMonthList(), new { Class = "form-control", Style = "display:inline-block;width:49.3%;" })
            @Html.DropDownListFor(model => model.ExpiryYear, LacysMobile.Web.Helpers.SelectListItemHelper.GetExpiryYearList(), new { Class = "form-control", Style = "display:inline-block;width:49.3%;" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.SecurityNo, new { Class = "col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.EditorFor(model => model.SecurityNo, new { Class = "form-control" })
            <div class="has-warning">
                @Html.ValidationMessageFor(model => model.SecurityNo)
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-lg-1">
            <input type="submit" value="Submit Order" class="btn btn-primary" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/Bundles/jqueryval")
}